                <div class="mb-3">
                    <input type="text" id="search" placeholder="Search..." class="form-control" autocomplete="off">
                    <table class="mt-3">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Genre</th>
                                <th>Series</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="results">

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


