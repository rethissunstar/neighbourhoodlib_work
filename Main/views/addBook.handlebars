<div class="container">

<div class="row">

    <div class="col-12">
        <h2 class="text-center">Add a Book</h2>

        <form class="form addBook-form">
            <div class="form-group">
                <label for="title-addBook">Title: *</label>
                <input class="form-input" type="text" id="title-addBook" required/>
            </div>
            <div class="form-group">
                <label for="author-addBook">Author: *</label>
                <input class="form-input" type="text" id="author-addBook" required/>
            </div>
            <div class="form-group">
                <label for="genre-addBook">Genre: *</label>
                <select  class="form-input" name="genre" id="genre-addBook">
                    <option value="Science Fiction">Science Fiction</option>
                    <option value="Dystopian">Dystopian</option>
                    <option value="Action">Action</option>
                    <option value="Mystery">Mystery</option>
                    <option value="Horror">Horror</option>
                </select>
            </div>
            <div class="form-group">
                <label for="series-addBook">Series: </label>
                <input class="form-input" type="text" id="series-addBook"/>
            </div>

            <div class="form-group">
                <label for="synopsis-addBook">Synopsis: *</label>
                <textarea class="form-input" id="synopsis-addBook" name="synopsis" placeholder="Tell us anything about the book." required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Submit Book</button>
            </div>
        </form>
    </div>
</div>
</div>
<script src="./js/addBook.js"></script>
